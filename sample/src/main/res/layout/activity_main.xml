<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:headlinecard="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="space.darkowlzz.headercardviewlibrary.MainActivity">

    <space.darkowlzz.headlinecardview.HeadlineCardView
        android:id="@+id/headlineCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        headlinecard:headline_text="@string/headlineTextValue"
        headlinecard:headline_padding="10dp"
        headlinecard:headline_style="@android:style/TextAppearance.Large"
        headlinecard:headline_align_centerInParent="true"
        headlinecard:background_color="@color/color_card1"
        headlinecard:card_elevation="@dimen/card_elevation1"
        headlinecard:menu_enabled="true"
        headlinecard:menu_options="@menu/headline_menu_options"
        headlinecard:menuicon_padding="@dimen/menuicon_padding1"
        headlinecard:menuicon_align_parentRight="true"
        headlinecard:menuicon_align_centerVertical="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"/>

    <space.darkowlzz.headlinecardview.HeadlineCardView
        android:id="@+id/headlineCard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        headlinecard:headline_text="@string/headlineTextValue"
        headlinecard:headline_padding="@dimen/headline_padding2"
        headlinecard:headline_style="@android:style/TextAppearance.Medium"
        headlinecard:headline_align_parentLeft="true"
        headlinecard:background_color="@color/color_card2"
        headlinecard:card_elevation="@dimen/card_elevation2"
        headlinecard:menu_enabled="true"
        headlinecard:menu_options="@menu/headline_menu_options"
        headlinecard:menuicon_padding="@dimen/menuicon_padding1"
        headlinecard:menuicon_align_parentRight="true"
        headlinecard:menuicon_align_centerVertical="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"/>

    <space.darkowlzz.headlinecardview.HeadlineCardView
        android:id="@+id/headlineCard3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        headlinecard:headline_text="@string/headlineTextValue"
        headlinecard:headline_align_parentRight="true"/>

    <space.darkowlzz.headlinecardview.HeadlineCardView
        android:id="@+id/headlineCard4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        headlinecard:headline_text="@string/headlineTextValue"
        headlinecard:headline_paddingTop="30dp"
        headlinecard:background_color="#009AFD"
        headlinecard:menu_enabled="true"
        headlinecard:menuicon_align_parentRight="true"/>

    <space.darkowlzz.headlinecardview.HeadlineCardView
        android:id="@+id/headlineCard5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        headlinecard:headline_text="@string/headlineTextValue"
        headlinecard:headline_textColor="#FFFFFF"
        headlinecard:headline_paddingTop="30dp"
        headlinecard:background_color="#009AFD"
        headlinecard:menu_enabled="true"
        headlinecard:menuicon_align_parentRight="true"
        headlinecard:menuicon_align_centerVertical="true"/>

    <space.darkowlzz.headlinecardview.HeadlineCardView
        android:id="@+id/headlineCard6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        headlinecard:headline_text="@string/headlineTextValue"
        headlinecard:headline_textSize="@dimen/headline_textSize6"
        headlinecard:headline_textColor="#3DFCED"
        headlinecard:headline_align_centerInParent="true"
        headlinecard:menu_enabled="true"
        headlinecard:menuicon_align_parentLeft="true"/>

</LinearLayout>
